doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{title}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/videos/upload") Upload Video
                    li
                        a(href="/") Home
                    li
                        a(href="/search") Search
                    if !loggedIn
                        li
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    else
                        li
                            a(href="/my-profile") #{loggedInUser.name}의 프로필
                            
                        a(href="/logout") Log out
        main
            block content
    include partials/footer.pug