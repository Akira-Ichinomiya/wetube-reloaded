extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")    
        input(name="email",type="text", required=true, placeholder="Email")
        input(name="username",type="text", required=true, placeholder="Username")
        input(name="password",type="text", required=true, placeholder="Password")
        input(name="passwordConfirm",type="text", required=true, placeholder="Confirm Password")
        input(name="name",type="text", required=true, placeholder="Your name")
        input(name="location",type="text", required=true, placeholder="Location")
        input(type="submit", value="Join!")
    
    hr
    div
        span Already have an account? 
        a(href="/login") Log in Now &rarr;