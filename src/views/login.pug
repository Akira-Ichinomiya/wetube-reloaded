extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")    
        input(name="username",type="text", required=true, placeholder="Username")
        input(name="password",type="text", required=true, placeholder="Password")
        input(type="submit", value="Log in")
    
    hr
    div
        span Don't have an account?
        a(href="/join") Create Now! &rarr;