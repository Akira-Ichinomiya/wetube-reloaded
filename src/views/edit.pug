extends base.pug

block content
    h4 Change Title of Video
    form(method="POST", action="")
        input(name="title", placeholder="Video Title", value=video.title required)
        input(name="description", placeholder="Description", required, type="text",value=video.description, minlength=20)
        input(name="hashtags", placeholder="Hashtags, seperated by comma.", required, value=video.hashtags.map((word) => word.replace(/^#+/i, '')).join(), type="text")
        input(value="Save", type="submit")